{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIML Glossary Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "term",
      "definition",
      "tags",
      "related_terms",
      "examples",
      "source",
      "last_updated"
    ],
    "properties": {
      "id": {
        "type": "integer",
        "description": "Unique identifier for the glossary entry",
        "minimum": 1
      },
      "term": {
        "type": "string",
        "minLength": 1
      },
      "definition": {
        "type": "string",
        "minLength": 1
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      },
      "related_terms": {
        "type": "array",
        "items": { "type": "string" }
      },
      "examples": {
        "type": "array",
        "items": { "type": "string" }
      },
      "source": {
        "type": "string"
      },
      "last_updated": {
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
        "description": "Date in YYYY-MM-DD format"
      }
    },
    "additionalProperties": false
  }
}
